@{
}
<h1 class="text-center mb-4">Add New Employee</h1>
<form>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Phone Number</label>
        <div class="col-sm-10">
            <input type="number" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Hire Date</label>
        <div class="col-sm-10">
            <input class="form-control" type="date">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputDate" class="col-sm-2 col-form-label">Job Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputTime" class="col-sm-2 col-form-label">Salary</label>
        <div class="col-sm-10">
            <input type="number" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputTime" class="col-sm-2 col-form-label">Deprtment ID</label>
        <div class="col-sm-10">
            <input type="number" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <a type="submit" class="btn btn-primary" asp-controller="Employee" asp-action="EmployeeTable">Submit Form</a>
        </div>
    </div>
</form>
